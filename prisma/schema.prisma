generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth Models

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Custom fields
  bio           String?   @db.Text
  location      String?
  
  // Relations
  assessments   Assessment[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ILO Classification Models (Africa Context)

model JobCategory {
  id          String @id @default(cuid())
  code        String @unique // ILO Major Group or Sub-major Group code
  nameEn      String
  nameFr      String
  namePt      String
  descriptionEn String? @db.Text
  descriptionFr String? @db.Text
  descriptionPt String? @db.Text
  
  jobs        Job[]
  parentId    String?
  parent      JobCategory? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  subcategories JobCategory[] @relation("CategoryHierarchy")
}

model Job {
  id          String   @id @default(cuid())
  code        String   @unique // ILO Unit Group code or extended custom code
  titleEn     String
  titleFr     String
  titlePt     String
  descriptionEn String? @db.Text
  descriptionFr String? @db.Text
  descriptionPt String? @db.Text
  
  categoryId  String
  category    JobCategory @relation(fields: [categoryId], references: [id])
  
  // Metadata for African context
  isInformal  Boolean @default(false)
  isEmerging  Boolean @default(false)
  isAgri      Boolean @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Assessment Models

model Assessment {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  status      String   @default("STARTED") // STARTED, COMPLETED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  results     Json?    // Store analysis results here
}
